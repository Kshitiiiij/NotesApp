generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id       Int     @id @default(autoincrement())
  username String? @unique
  roles    String  @default("Employee")
  note     Notes[]
}

model Notes {
  id     Int    @id @default(autoincrement())
  title  String 
  text   String
  user   User   @relation(fields: [userId], references: [id])
  userId Int

  @@index([userId])
}
